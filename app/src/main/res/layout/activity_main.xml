<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView for a prompt showing the user to enter a task. -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/enter_the_task" />

        <!-- EditText for the user to enter a task. -->
        <EditText
            android:id="@+id/editTextTask"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:hint="@string/todo_task" />

        <!-- Button for the user to add a task when clicked. -->
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add" />

        <!-- TextView for a header indicating the user's tasks. -->
        <TextView
            android:id="@+id/tasks"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/tasks" />

        <!-- ListView to display the user's tasks. -->
        <ListView
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:autofillHints="tasks" />

    </LinearLayout>
</ScrollView>